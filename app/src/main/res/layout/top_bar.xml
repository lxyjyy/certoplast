<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_top_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/login_bg">

    <ImageButton
        android:id="@+id/btn_left_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#0000"
        android:paddingLeft="@dimen/tab_bar_back_left"
        android:visibility="gone"
        android:paddingRight="20dp"
        android:src="@mipmap/nav_icon_back_white" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tab_bar_title_size"/>

    <!--<ImageButton-->
        <!--android:id="@+id/btn_right"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="#0000"-->
        <!--android:padding="10dp"-->
        <!--android:src="@mipmap/worksheet_nav_icon_select2x"-->
        <!--android:visibility="gone"-->
        <!--/>-->



    <TextView
        android:id="@+id/tv_pick_up_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/padding_left"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:layout_toLeftOf="@+id/tv_confirm"
        android:text="提货"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingRight="@dimen/padding_right"
        android:paddingTop="10dp"
        android:text="确认"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="17sp"/>

</RelativeLayout>
