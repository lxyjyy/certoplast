<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/top_bar"/>

    <RelativeLayout
        android:id="@+id/half_pro"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/half_producton"/>



        <TextView
            android:layout_toRightOf="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="半成品入库"
            android:layout_marginLeft="15dp"
            android:textSize="17dp"/>



    </RelativeLayout>



    <LinearLayout
        style="@style/newSheetLineStyle"
        android:layout_height="wrap_content">

        <include layout="@layout/line_c"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/full_pro"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/second_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/full_production"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>



        <TextView
            android:layout_toRightOf="@+id/second_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="成品入库"
            android:layout_marginLeft="15dp"
            android:textSize="17dp"/>

    </RelativeLayout>
    <LinearLayout
        style="@style/newSheetLineStyle"
        android:layout_height="wrap_content">

        <include layout="@layout/line_c"/>
    </LinearLayout>

</LinearLayout>