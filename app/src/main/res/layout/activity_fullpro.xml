<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg">

    <include layout="@layout/top_bar"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layout_bg"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/layout_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/login_bg"
                    android:text="成品入库系统"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/login_bg"
                    android:text="待入库成品批号:"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="待入库成品批号"
                        android:textColor="@color/a_c"
                        android:singleLine="true"
                        android:layout_marginTop="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:textColorHint="@color/a_c"
                        android:background="@null"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/et_search"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@color/b_c"/>

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/login_btn_width"
                        android:background="@android:color/white"
                        android:textColor="@color/login_bg"
                        android:layout_below="@+id/et_search"
                        android:layout_marginTop="@dimen/margin_top"
                        android:layout_centerHorizontal="true"

                        android:text="查询"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="@null"

                        android:scrollbars="vertical">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>


            <include
                layout="@layout/show_empty"
                android:id="@+id/show_empty"
                android:visibility="gone"/>
            <include
                layout="@layout/searching"
                android:id="@+id/searching"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
    <include layout="@layout/bottom_bar"/>
</LinearLayout>