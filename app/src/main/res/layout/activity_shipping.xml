<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/layout_bg"
    android:layout_height="match_parent">

    <include layout="@layout/top_bar"/>


    <RelativeLayout
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:textColor="@color/login_bg"
            android:layout_centerInParent="true"
            android:layout_above="@+id/tv_below"
            android:text="出库扫描系统"/>

        <TextView
            android:id="@+id/tv_below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/login_bg"
            android:layout_centerInParent="true"
            android:layout_above="@+id/et_search"
            android:text="出库扫描系统:"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="发货单号"
            android:textColor="@color/a_c"
            android:singleLine="true"

            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColorHint="@color/a_c"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/et_search"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/b_c"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="200dp"
            android:layout_height="@dimen/login_btn_width"
            android:background="@android:color/white"
            android:textColor="@color/login_bg"
            android:layout_below="@+id/et_search"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_centerHorizontal="true"

            android:text="查询"/>

    </RelativeLayout>

    <include layout="@layout/bottom_bar"/>
</LinearLayout>